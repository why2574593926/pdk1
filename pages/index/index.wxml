<!--index.wxml-->

<view class='top_max'>
  <!-- 顶部搜索 -->
  <view class='search'>
    <input placeholder-class='placer' placeholder='搜索商品或特权'></input>
    <image src='../img/search1.png'></image>
  </view>
  <!-- 顶部滚动 -->
  <swiper indicator-dots='true' indicator-active-color='#FF6D10' indicator-color='white' autoplay='true' interval='3000' duration='1000'>
    <swiper-item>
      <image src='../img/guanggao1.png'></image>
    </swiper-item>
    <swiper-item>
      <image src='../img/guanggao2.png'></image>
    </swiper-item>
    <swiper-item>
      <image src='../img/guanggao3.png'></image>
    </swiper-item>
  </swiper>
</view>
<!-- 热门特权 -->
<view class='tequan1'>
  <image src='../img/tequan1.jpg'></image>
</view>
<view class='pipiicon'>
  <image src='../img/shop_icon.jpg'></image>
  <text>热门特权</text>
</view>
<view class="category-box">
  <view class="category-list" wx:key wx:for="{{tequan1}}" id="{{item.tag}}">
    <view class="category-column">

      <view style="position: relative;">
        <image wx:if="{{index<4}}" class="category-imgbox" src="{{item.url}}"></image>
        <image wx:else class="category-imgbox2" src="{{item.url}}"></image>

        <view wx:if="{{item.url2}}">
          <image class="tag" src="{{item.url2}}" />
        </view>
      </view>


      <view class="category-title">{{item.content}}</view>
      <view a:if="{{item.reservedata1}}" class="category-title">{{item.reservedata1}}</view>
    </view>
  </view>
</view>
<!-- 中部滑块 -->
<view class="a-scroll">
  <scroll-view scroll-x class="my-scroll">
    <view id="img1" class="s-item">
      <image src="../img/scroll1.png"></image>
    </view>
    <view id="img2" class="s-item">
      <image src="../img/scroll2.png"></image>
    </view>
    <view id="img3" class="s-item">
      <image src="../img/scroll3.png"></image>
    </view>
  </scroll-view>
</view>
