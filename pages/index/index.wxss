/**index.wxss**/
/* 搜索 */
.top_max{
  z-index: 888;
  width: 100%;
  height: 430rpx;
  background-color: #FF6D10;
}
.search{
  width: 90%;
  height: 70rpx;
  float: left;
  margin-left: 5%;
  margin-top: 20rpx;
}
.search input{
  width: 87%;
  height: 100%;
  color: #3B3B3B;
  background-color: white;
  border-radius: 50rpx;
  padding-left: 90rpx;
}
.placer{
  color: #D2D2D2;
}
.search image{
  position: absolute;
  top: 35rpx;
  left: 70rpx;
  width: 40rpx;
  height: 40rpx;
}
/* 模糊查询 */
.chaxun{
  z-index: 99999999;
  position: fixed;
  top: 100rpx;
  width: 90%;
  left: 5%;
  background-color: rgba(255,255,255,0.8);
  line-height: 80rpx;
}
.chaxun view{
  border-bottom: 1rpx solid gainsboro;
}
/* 顶部滚动 */
.top_max swiper{
  float: left;
  width: 100%;
  height: 350rpx;
}
.top_max swiper image{
  width: 100%;
  height: 360rpx;
}
.tequan1_t1{
  position: relative;
  top: -150rpx;
  display: block;
  width: 100%;
  text-align: center;
  color: white;
  font-size: 30rpx;
  font-weight: bold;
}
.tequan1_t2{
  position: relative;
  top: -140rpx;
  display: block;
  width: 100%;
  line-height: 70rpx;
  text-align: center;
  color: white;
  font-size: 30rpx;
  font-weight: bold;
}
/* 卡片滚动 */
.sw2{
  margin-top: 20rpx;
  width: 100%;
}
.sw2 image{
  width: 90%;
  height: 90%;
  transition: all 1s;
}
/* 特权 */
.tequan1{
  z-index: 999;
  width: 100%;
  height: 350rpx;
}
.tequan1 image{
  width: 100%;
  height: 650rpx;
  margin-top: -300rpx;
}
.category-box {  
  background-color: #fff;
  clear: both;
}
.category-list{
  width:180rpx;
  margin-top:20rpx;
  text-align: center;
  display: inline-block;
}
.category-column{
  width:100%;
  margin-top:20rpx;
  
}
.category-imgbox{
  width:64px;
  height:64px;
}
.category-imgbox2{
  width:45px;
  height:45px;
}
.category-title{
  font-size: 24rpx;
  text-align:center;
  margin-top:10rpx;
}

.tag{
  
  height: 30rpx;
  position: absolute;
  top: -20rpx;
  left: 90rpx;
  z-index: 1;
  background-color: #FF6D10;
  color: white;
  line-height: 30rpx;
  font-size: 22rpx;
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.tag1{
  left: 80rpx;
  width: 100rpx;
}
/* 中部滑块 */
.a-scroll{
  margin-top: 30rpx;
  width: 100%;
  height: 280rpx;
}
.my-scroll{
  width: 100%;
  white-space: nowrap; 
}
.s-item{
  width: 38%;
  margin-left: 20rpx;
  display: inline-block;
}
.a-scroll image{
  width: 100%;
  height: 280rpx;
}
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}
/* 皮皮商城 */
.pipiicon{
  width: 100%;
  height: 100rpx;
}
.pipiicon image{
  float: left;
  width: 25rpx;
  height: 55rpx;
  margin-top: 27rpx;
  margin-left: 30rpx;
}
.pipiicon text{
  float: left;
  color: #000000;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 100rpx;
  margin-left: 10rpx;
}
.shop_max{
  width: 33.3%;
  height: 350rpx;
  float: left;
  margin-top: 30rpx;
}
.shop{
  width: 90%;
  height: 100%;
  margin-left: 5%;
  box-shadow: 0px 0px 10px rgba(0,0,0,0.5);
}
.shop_img{
  width: 100%;
  height: 220rpx;
}
.shop_img image{
  width: 100%;
  height: 100%;
}
.shop_text1{
  width: 100%;
  text-align: center;
  margin-top: 10rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #686868;
  letter-spacing: 0rpx;
  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}
.shop_text2{
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #FF8D45;
  letter-spacing: 0rpx;
  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}
.shop_text2 text:nth-of-type(3){
  font-size: 30rpx;
  font-weight:600;
  position: relative;
  top: -10rpx;
}
.shop_text2 text:nth-of-type(2){
  display: inline-block;
  height: 35rpx;
  line-height: 35rpx;
  font-size: 23rpx;
  text-align: center;
  margin-left:5rpx;
  position: relative;
  top: -10rpx;
}
.shop_text2 text:nth-of-type(1){
   display: inline-block;
  width: 50rpx;
  height: 54rpx;
  line-height: 27rpx;
  color: white;
  background-color: #FF6D10;
  border-radius: 10rpx;
  font-size: 20rpx;
  text-align: center;
  position: relative;
  top: 0rpx;
  white-space:normal;
}
.shop_shengqian_max{
  width: 100%;
  text-align: center;
  position: relative;
  top: -190rpx;
}
.shop_shengqian{
  padding: 5rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-left: 10rpx;
  color: white;
  background-color: #FF6D10;
  border-radius: 50rpx;
  font-size: 25rpx;
  text-align: center;
}
#text_add{
  color: #CCCCCC;
  text-decoration:line-through;
  font-size: 20rpx;
  line-height: 45rpx;
  margin-left: 5rpx;
  position: relative;
  top: -10rpx;
}
/* 商品结尾 */
.shop_last_max{
  position: relative;
  width: 33.3%;
  height: 350rpx;
  float: left;
  margin-top: 30rpx;
}
.shop_last{
  color: rgba(255,255,255,0.8);
  font-size: 30rpx;
  width: 90%;
  height: 100%;
  margin-left: 5%;
  box-shadow: 0px 0px 10px rgba(0,0,0,0.5);
}
.shop_last_img{
  width: 100%;
  height: 350rpx;
}
.shop_last_text1{
  position: absolute;
  top: 140rpx;
  text-align: center;
  display: block;
  width: 100%;
}
.shop_last_text2{
  position: absolute;
  top: 180rpx;
  text-align: center;
  display: block;
  width: 100%;
}
.shop_last_text4{
  position: absolute;
  top: 220rpx;
  text-align: center;
  display: block;
  width: 100%;
  line-height: 20rpx;
}
.shop_last_text3{
  position: absolute;
  top: 0rpx;
  display: block;
  width: 90%;
  height: 350rpx;
  background-color: rgba(0,0,0,0.5);
}
/* 未开通弹窗 */
.no_kt_max{
  position: fixed;
  top: 0rpx;
  width: 100%;
  height: 100%;
  z-index: 999999;
  background-color: rgba(0, 0, 0, 0.4)
}
.no_kt{
  width: 90%;
  margin-left: 5%;
  margin-top: 300rpx;
  height: 550rpx;
  border-radius: 15rpx;
  background-color: white;
  /* padding-top: 10rpx; */
}
.no_kt view:nth-of-type(1){
  width: 100%;
  height: 50%;
}
.no_kt view:nth-of-type(1) image{
  width: 100%;
  height:100%;
}
.no_kt view:nth-of-type(2){
  width: 100%;
  text-align: center;
  height:30%;
  border-bottom: 1rpx solid #D8D8D8;
}
.no_kt view:nth-of-type(2) text{
  display: block;
  color: #313131;
  font-size: 35rpx;
  line-height: 50rpx;
}
.no_kt view:nth-of-type(3){
  width: 100%;
}
.no_kt view:nth-of-type(3) text{
  display: block;
  width: 30%;
  margin-top: 20rpx;
  margin-left: 35%;
  height: 70rpx;
  line-height: 70rpx;
  background-image: linear-gradient(to right, #FEBD88 , #E93E6A);
  text-align: center;
  border-radius: 50rpx;
  color: white;
  font-size: 35rpx
}
/* 右边浮窗 */
.order2{
  z-index: 999;
  position: fixed;
  top: 40%;
  right: 0rpx;
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: white;
  background-color: #FF6D10;
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
  box-shadow: 0px 0px 0px rgba(0,0,0,0.2);
  font-size: 25rpx;
  background-image: linear-gradient(to right , #FF730F, #FF940A);
}
.order3{
  z-index: 999;
  position: fixed;
  top: 45%;
  right: 0rpx;
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: white;
  background-color: #FF6D10;
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
  box-shadow: 0px 0px 0px rgba(0,0,0,0.2);
  font-size: 25rpx;
  background-image: linear-gradient(to right , #FF730F, #FF940A);
}
.order4{
  opacity: 0;
}