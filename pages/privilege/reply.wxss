/* 评论循环 */
/* 主评论 */
.pl_max{
  width: 94%;
  margin-left: 3%;
}
.pl1{
  width: 100%;
  height: 80rpx;
}
.pl1 image{
  float: left;
  width: 60rpx;
  height: 60rpx;
  margin-top: 20rpx;
  border-radius: 50%;
}
.pl1 text{
  color: #FF731A;
  margin-left: 20rpx;
  float: left;
  line-height: 80rpx;
  margin-top: 10rpx;
  font-size: 35rpx;
}
.pl2{
  width: 90%;

  margin-left: 5%;
}

.pl3{
  width: 90%;
  margin-left: 5%;
  color: #6D6D6D;
  font-size: 30rpx;
  line-height: 40rpx;
  margin-top: 20rpx;
}
.pl4{
  width: 90%;
  margin-left: 5%;
  line-height: 100rpx;
  height: 100rpx;
  color: #CFCFCF;
  font-size: 25rpx;
}
.pl4 image{
  float: left;
  margin-top: 30rpx;
  width: 40rpx;
  height: 40rpx;
}
.pl4 text:nth-of-type(1){
  float: left;
  margin-left: 10rpx;
}
.pl4 text:nth-of-type(2){
  float: right;
}
