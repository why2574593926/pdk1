/* 展开收起回复 */
.huifu_zs{
  width: 100%;
  text-align: center;
  line-height: 70rpx;
  height: 70rpx;
  font-size: 27rpx;
  color: #969696;
}
.huifu_zs text{
  float: left;
  margin-left: 37%;
}
.huifu_zs image{
  float: left;
  width: 30rpx;
  height: 30rpx;
  margin-top: 20rpx;
}
/* 回复 */
.reply1{
  width: 100%;
  height: 150rpx;
}
.reply{
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 150rpx;
  background-color: white;
  box-shadow: 0 0 10rpx rgba(0,0,0,0.2);
}
.reply image{
  float: left;
  width: 70rpx;
  height: 70rpx;
  margin-top: 20rpx;
  border-radius: 50%;
  margin-left: 3%;
}
.reply input{
  float: left;
  width: 60%;
  margin-left: 3%;
  margin-top: 20rpx;
  background-color: #EFEFEF;
  height: 70rpx;
  border-radius: 15rpx;
  text-indent: 20rpx;
}
.reply view{
  width: 100rpx;
  height: 70rpx;
  text-align: center;
  border-radius: 15rpx;
  line-height: 70rpx;
  background-color: #FF6D10;
  color: white;
  font-size: 30rpx;
  float: left;
  margin-left: 3%;
  margin-top: 20rpx;
}