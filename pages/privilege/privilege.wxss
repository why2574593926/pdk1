/**index.wxss**/
/* 搜索 */
.top_max{
  z-index: 888;
  width: 100%;
  height: 430rpx;
  background-color: #FF6D10;
}
.search{
  width: 90%;
  height: 70rpx;
  float: left;
  margin-left: 5%;
  margin-top: 20rpx;
}
.search input{
  width: 87%;
  height: 100%;
  color: #3B3B3B;
  background-color: white;
  border-radius: 50rpx;
  padding-left: 90rpx;
}
.placer{
  color: #D2D2D2;
}
.search image{
  position: absolute;
  top: 35rpx;
  left: 70rpx;
  width: 40rpx;
  height: 40rpx;
}
/* 模糊查询 */
.chaxun{
  z-index: 99999999;
  position: fixed;
  top: 100rpx;
  width: 90%;
  left: 5%;
  background-color: rgba(255,255,255,0.8);
  line-height: 80rpx;
}
.chaxun view{
  border-bottom: 1rpx solid gainsboro;
}
/* 顶部滚动 */
.top_max swiper{
  float: left;
  width: 100%;
  height: 320rpx;
}
.top_max swiper image{
  width: 100%;
  height: 350rpx;
}
/* 特权 */
