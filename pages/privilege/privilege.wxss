/* 未开通弹窗 */
.no_kt_max{
  position: fixed;
  top: 0rpx;
  width: 100%;
  height: 100%;
  z-index: 999999;
  background-color: rgba(0, 0, 0, 0.4)
}
.no_kt{
  width: 90%;
  margin-left: 5%;
  margin-top: 300rpx;
  height: 550rpx;
  border-radius: 15rpx;
  background-color: white;
  /* padding-top: 10rpx; */
}
.no_kt view:nth-of-type(1){
  width: 100%;
  height: 50%;
}
.no_kt view:nth-of-type(1) image{
  width: 100%;
  height:100%;
}
.no_kt view:nth-of-type(2){
  width: 100%;
  text-align: center;
  height:30%;
  border-bottom: 1rpx solid #D8D8D8;
}
.no_kt view:nth-of-type(2) text{
  display: block;
  color: #313131;
  font-size: 35rpx;
  line-height: 50rpx;
}
.no_kt view:nth-of-type(3){
  width: 100%;
}
.no_kt view:nth-of-type(3) text{
  display: block;
  width: 30%;
  margin-top: 20rpx;
  margin-left: 35%;
  height: 70rpx;
  line-height: 70rpx;
  background-image: linear-gradient(to right, #FEBD88 , #E93E6A);
  text-align: center;
  border-radius: 50rpx;
  color: white;
  font-size: 35rpx
}
