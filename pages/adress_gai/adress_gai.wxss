/* pages/adress/adress.wxss */.my_max{
  width: 100%;
  height: 1200rpx;
  background-color: #F8F8F8;
}
.adress_max{
  width: 100%;
  background-color: violet;
  float: left;
  margin-top: 30rpx;
}
/* 地址 */
.my_pd{
  width: 100%;
  height: 500rpx;
  background-color: #FFFFFF;
}
.my_pd view{
  width: 94%;
  margin-left: 3%;
  height: 120rpx;
  border-bottom: 2rpx dashed #E1DADB;
}
.my_pd input{
  height: 100%;
}
.my_tc{
  width: 100%;
  float: left;
  height: 120rpx;
  background-color: #FFFFFF;
  box-shadow: 2px 2px 2px rgba(0,0,0,0.2);
}
.my_tc image{
  float: left;
  margin-left: 30rpx;
  margin-top: 40rpx;
  width: 30rpx;
  height: 30rpx;
  background-color: #AEAEAE;
  border-radius: 50%;
}
.my_tc text{
  float: left;
  margin-left: 30rpx;
  margin-top: 35rpx;
  font-size: 30rpx;
  color: #6E6E6E;
}
.adress_bt{
  float: left;
  width: 30%;
  height: 60rpx;
  line-height: 60rpx;
  color: white;
  background-color: #FF6D10;
  font-size: 30rpx;
  text-align: center;
  margin-left: 35%;
  border-radius: 50rpx;
  margin-top: 30rpx;
}
/* 地区选择 */
.tui-picker-content{
  float: left;
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
}
picker{
  width: 100%;
}
picker input{
  float: left;
  display: block;
  margin-top: 40rpx;
  margin-left: -20rpx;
}