/* pages/my/my.wxss */
.friends_max{
  position: fixed;
  overflow: hidden;
  width: 100%;
  height: 100%;
}
.top_js{
  width: 100%;
  height: 80rpx;
  background-color: #FFF7E0;
  color: #FCB177;
  font-size: 30rpx;
  line-height: 80rpx;
}
.top_js image{
  float: left;
  width: 40rpx;
  height: 40rpx;
  margin-top: 20rpx;
  margin-left: 40rpx;
}
.top_js text{
  float: left;
  margin-left: 20rpx;
}
.users{
  width: 90%;
  height: 100rpx;
  margin-left: 5%;
  background-color: white;
  border-bottom: 1rpx solid #F6F6F6;
  line-height: 100rpx;
}
.users image{
  float: left;
  width: 30rpx;
  height: 30rpx;
  margin-top: 35rpx;
}
.users>text{
  margin-left: 20rpx;
  color: #A0A0A0;
}
#text_t{
  color: #5D5D5D;
}
#user1{
  height: 160rpx;
}
#user1 view:nth-of-type(1){
  width: 20%;
  height: 100%;
  float: left;
}
#user1 image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
#user1 view:nth-of-type(2){
  width: 70%;
  height: 100%;
  float: left;
  margin-left: 5%;
}
#user1 view:nth-of-type(2) text:nth-of-type(1){
  color: #141414;
  display: block;
  line-height: 30rpx;
  margin-top: 40rpx;
  font-size: 38rpx;
}
#user1 view:nth-of-type(2) text:nth-of-type(2){
  color: #A0A0A0;
  line-height: 30rpx;
  font-size: 30rpx;
}
/* 匹配 */
.pp{
  margin-top: 40rpx;
  text-align: center;
  width: 100%;
}
.pp>view{
  margin: auto;
  margin-top: -70rpx;
  margin-left: 20%;
  width: 400rpx;
  height: 315rpx;
  border-radius: 50%;
}
.pp>view>view{
  font-size: 35rpx;
  color: white;
  margin-top: 40%;
}
.max_xz{
position: fixed;
height: 100%; 
width: 100%; 
display:flex; 
flex-direction:column;
align-items:center; 
justify-content: center;
}
.max_xz_img{
  width: 100%;
  height: 100%;
}
.max_xz_img image{
  width: 80%;
  height: 100%;
  margin-left: 10%;
  transition: 0.5s; 
  animation: rotate 10s linear infinite;
}
@keyframes rotate{
    0%{
        transform: rotate(0);
      }
    50%{
    	transform:rotate(180deg);
    }
    100%{
         transform: rotate(360deg);
    	}
}
.max_xz_text{
  position: absolute;
  top:18%;
  margin-left: 20rpx;
  color: white;
  font-size: 50rpx;
  font-weight: 100;
}
