/* pages/my/my.wxss */
.pp1{
  width: 50%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  float: left;
}
.pp1 text{
  color: #FF7A25;
  display: inline-block;
}
/* 内容 */
.content_max{
  margin-top: 20rpx;
  float: left;
  width: 100%;
  height: 300rpx;
  box-shadow: 2px 2px 2px rgba(0,0,0,0.2);
  overflow: hidden;
}
.friends_max{
  width: 100%;
  height: 100%;
}
.top_js{
  width: 100%;
  height: 80rpx;
  background-color: #FFF7E0;
  color: #FCB177;
  font-size: 30rpx;
  line-height: 80rpx;
}
.top_js image{
  float: left;
  width: 40rpx;
  height: 40rpx;
  margin-top: 20rpx;
  margin-left: 40rpx;
}
.top_js text{
  float: left;
  margin-left: 20rpx;
}
.users{
  width: 90%;
  height: 70rpx;
  margin-left: 5%;
  background-color: white;
  border-bottom: 1rpx solid #F6F6F6;
  line-height: 70rpx;
  font-size: 30rpx;
}
.users image{
  float: left;
  width: 30rpx;
  height: 30rpx;
  margin-top: 20rpx;
}
.users>text{
  margin-left: 20rpx;
  color: #A0A0A0;
}
#text_t{
  color: #5D5D5D;
}
#user1{
  height: 160rpx;
}
#user1 view:nth-of-type(1){
  width:90rpx;
  height: 100%;
  float: left;
}
#user1 image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
#user1 view:nth-of-type(2){
  width: 80%;
  height: 100%;
  float: left;
}
#user1 view:nth-of-type(2) text:nth-of-type(1){
  color: #A0A0A0;
  line-height: 90rpx;
  font-size: 30rpx;
}
#user1 view:nth-of-type(2) text:nth-of-type(2){
  color: #A0A0A0;
  line-height: 90rpx;
  font-size: 30rpx;
  margin-left: 20rpx;
}
#user1>image{
  float: right;
  width: 30rpx;
  height: 30rpx;
  margin-top: 30rpx;
}
