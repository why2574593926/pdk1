/**index.wxss**/
/* 搜索 */
.top_max{
  z-index: 888;
  width: 100%;
  height: 430rpx;
  background-color: #FF6D10;
}
.search{
  width: 90%;
  height: 70rpx;
  float: left;
  margin-left: 5%;
  margin-top: 20rpx;
}
.search input{
  width: 87%;
  height: 100%;
  color: #3B3B3B;
  background-color: white;
  border-radius: 50rpx;
  padding-left: 90rpx;
}
.placer{
  color: #D2D2D2;
}
.search image{
  position: absolute;
  top: 35rpx;
  left: 70rpx;
  width: 40rpx;
  height: 40rpx;
}
/* 模糊查询 */
.chaxun{
  z-index: 99999999;
  position: fixed;
  top: 100rpx;
  width: 90%;
  left: 5%;
  background-color: rgba(255,255,255,0.8);
  line-height: 80rpx;
}
.chaxun view{
  border-bottom: 1rpx solid gainsboro;
}
/* 顶部滚动 */
.top_max swiper{
  float: left;
  width: 100%;
  height: 320rpx;
}
.top_max swiper image{
  width: 100%;
  height: 350rpx;
}
/* 皮皮商城 */
.shop_max_view{
  width: 100%;
}
.pipiicon{
  float: left;
  width: 100%;
  height: 100rpx;
  margin-top: 20rpx;
}
.pipiicon image{
  float: left;
  width: 25rpx;
  height: 55rpx;
  margin-top: 27rpx;
  margin-left: 30rpx;
}
.pipiicon text{
  float: left;
  color: #000000;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 100rpx;
  margin-left: 10rpx;
}
.shop_max{
  width: 33.3%;
  height: 350rpx;
  float: left;
  margin-top: 30rpx;
}
.shop{
  width: 90%;
  height: 100%;
  margin-left: 5%;
  box-shadow: 0px 0px 10px rgba(0,0,0,0.5);
}
.shop_img{
  width: 100%;
  height: 220rpx;
}
.shop_img image{
  width: 100%;
  height: 100%;
}
.shop_text1{
  width: 100%;
  text-align: center;
  margin-top: 10rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #686868;
  letter-spacing: 0rpx;
  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}
.shop_text2{
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #FF8D45;
  letter-spacing: 0rpx;
  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}
.shop_text2 text{
  font-size: 30rpx;
  font-weight:600;
}
/* 商品结尾 */
.shop_last_max{
  position: relative;
  width: 33.3%;
  height: 350rpx;
  float: left;
  margin-top: 30rpx;
}
.shop_last{
  color: rgba(255,255,255,0.8);
  font-size: 30rpx;
  width: 90%;
  height: 100%;
  margin-left: 5%;
  box-shadow: 0px 0px 10px rgba(0,0,0,0.5);
}
.shop_last_img{
  width: 100%;
  height: 350rpx;
}
.shop_last_text1{
  position: absolute;
  top: 140rpx;
  text-align: center;
  display: block;
  width: 100%;
}
.shop_last_text2{
  position: absolute;
  top: 180rpx;
  text-align: center;
  display: block;
  width: 100%;
}
.shop_last_text4{
  position: absolute;
  top: 220rpx;
  text-align: center;
  display: block;
  width: 100%;
  line-height: 20rpx;
}
.shop_last_text3{
  position: absolute;
  top: 0rpx;
  display: block;
  width: 90%;
  height: 350rpx;
  background-color: rgba(0,0,0,0.5);
}
/* 商城底部敬请期待 */
.shop_bottom{
  float: left;
  width:90%;
  margin-top: 30rpx;
  height: 200rpx;
  margin-left: 5%;
}
.shop_bottom1 {
  width: 100%;
   height: 120rpx;
   line-height: 120rpx;
   text-align: center;
}
 .shop_bottom1 .line {
   display: inline-block;
   width: 30%;
   font-size: 38rpx;
   border-top: 3rpx solid #FF7823 ;
}
.shop_bottom1 .txt {
  font-weight: bold;
   color: #686868;
   vertical-align: middle;
}
.shop_bottom2{
  text-align: center;
  font-size: 38rpx;
  color: #FD791B;
  font-weight: bold;
}