.my_max{
  width: 100%;
  height: 1200rpx;
  background-color: #F8F8F8;
}
/* 皮豆说明 */
.my_pd{
  width: 94%;
  float: left;
  height: 120rpx;
  margin-left: 3%;
  margin-top: 30rpx;
  background-color: #FFFFFF;
  border-radius: 15rpx;
  box-shadow: 2px 2px 2px rgba(0,0,0,0.2);
}
.my_pd text{
  width: 81%;
  color: #696969;
  float: left;
  font-size: 30rpx;
  font-weight: 500;
  line-height: 120rpx;
  margin-left: 8%;
}
.my_pd image{
  width: 15rpx;
  height: 25rpx;
  margin-top: 45rpx;
}
.my_tc{
  width: 94%;
  float: left;
  height: 120rpx;
  margin-left: 3%;
  margin-top: 27rpx;
  background-color: #FFFFFF;
  border-radius: 15rpx;
  box-shadow: 2px 2px 2px rgba(0,0,0,0.2);
}
.my_tc text{
  width:100%;
  line-height: 120rpx;
  text-align: center;
  color: #FF802F;
  float: left;
  font-size: 37rpx;
}
/* 优惠详情 */
.pd_xq_max{
  position: fixed;
  top: 0rpx;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.4);
}
.pd_xq{
  position: fixed;
  top: 300rpx;
  left: 5%;
  width: 90%;
  height: 500rpx;
  border-radius: 25rpx;
  background-color: white;
}
.pd_xq1{
  width: 100%;
  height: 75%;
  border-bottom: 1rpx solid #E7E2E2;
}
.pd_xq1 text{
  display: block;
  width: 90%;
  margin-left: 5%;
  font-size: 31rpx;
  color: #5B5B5B;
}
.pd_xq1 text:nth-of-type(1){
  color: #111111;
  line-height:120rpx;
  font-size: 40rpx; 
  text-align: center;
  
}
.pd_xq2{
  width: 100%;
}
.pd_xq2 text{
  margin-left: 32%;
  margin-top: 25rpx;
  text-align: center;
  display: block;
  width: 36%;
  height: 75rpx;
  color: #FEF9F8;
  font-size: 31rpx;
  line-height: 75rpx;
  border-radius:50rpx; 
  background-image: linear-gradient(to right , #FEBB88, #E93E6A);
}